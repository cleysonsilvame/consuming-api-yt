<div class="container">
  <div class="py-5 text-center">
    {{!-- <img src="logo-nd.png"> --}}
    <h1>Comentario Selecionado</h1>
    <p class="lead">Clique para apagar para enviar comentário em branco</p>
    <a href="/broadcast/comments/{{{codeLive}}}" class="mt-3 btn btn-outline-dark btn-block">Ver comentário
      selecionado</a>
    <p class="lead">{{comentario.error}}</p>
  </div>

  <div class="row">
    <div class="col-12">
      {{#each comentario}}
      <div class="card p-2 my-2">
        <form action="/broadcast/comment" method="post">
          <input type="text" name="displayName" hidden>
          <input type="text" name="profileImageUrl" hidden>
          <input type="text" name="displayMessage" hidden>
          <input type="text" name="publishedAt" hidden>
          <div class="media d-flex align-items-center">
            {{#if this.profileImageUrl}}
            <img src={{this.profileImageUrl}} class="mr-3 rounded-circle" alt="..." width="60rem">
            {{/if}}
            <div class="media-body">
              <h5 class="mt-0">{{this.displayName}}</h5>
              <span class="font-italic">{{this.displayMessage}}</span>
            </div>
            <div class="d-flex flex-column align-items-center">
              {{#if this.publishedAt}}
              <button type="submit" class="btn btn-outline-dark my-2">Apagar</button>
              <span class="badge badge-secondary">{{this.publishedAt}}</span>
              {{/if}}
              {{!-- <a href="/broadcast/comments" class="btn btn-outline-dark my-2">Voltar</button> --}}
            </div>
          </div>
        </form>
      </div>
      {{/each}}
    </div>
  </div>
</div>