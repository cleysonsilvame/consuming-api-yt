<div class="container">
  <div class="py-5 text-center">
    {{!-- <img src="logo-nd.png"> --}}
    <h1>Comentarios</h1>
    <p class="lead">Clique para enviar o comentario para live</p>
    <p class="lead">{{comentario.error}}</p>
  </div>

  <div class="row">
    <div class="col-12">
      <div class="alert alert-success" role="alert">
        {{message}}
      </div>
      {{#each comentario}}
      <div class="card p-2 my-2">
        <div class="media d-flex align-items-center">
          <img src={{this.profileImageUrl}} class="mr-3 rounded-circle" alt="..." width="60rem">
          <div class="media-body">
            <h5 class="mt-0">{{this.displayName}}</h5>
            <span class="font-italic">{{this.displayMessage}}</span>
          </div>
          <div class="d-flex flex-column align-items-center">
          </div>
        </div>
      </div>
      {{/each}}
      <a href="/broadcast/comment" class="mt-3 btn btn-outline-dark btn-block">Ver coment√°rios selecionados</a>
    </div>
  </div>
</div>